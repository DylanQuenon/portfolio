<div class="w-full flex justify-center py-4 pagination">
    <nav aria-label="Page navigation example">
        <ul class="flex -space-x-px text-base gap-5">
        
            {# Lien première page (désactivé si nous sommes sur la première page) #}
            {% if page != 1 %}
                    <a href="{{ path(route, {'page': 1}) }}" class=" hover:bg-purple-500 hover:text-white text-lg urbanist font-semibold flex items-center justify-center px-4 h-10 rounded-full hover:bg-tertiary hover:text-primary" aria-label="Next">
                           <span aria-hidden="true"><i class="fa-solid fa-angles-left"></i></span>
                    </a>
                {% else %}
                    <span class=" hover:bg-purple-500 hover:text-white text-lg urbanist font-semibold flex items-center justify-center px-4 h-10 leading-tight text-gray-300 bg-white border border-gray-300 cursor-not-allowed rounded-full" aria-label="Next">
                        <span aria-hidden="true"><i class="fa-solid fa-angles-left"></i></span>
                    </span>
                {% endif %}

            {# Lien précédent (désactivé si nous sommes sur la première page) #}
               {% if page != 1 %}
                    <a href="{{ path(route, {'page': page - 1}) }}" class=" hover:bg-purple-500 hover:text-white text-lg urbanist font-semibold flex items-center justify-center px-4 h-10 rounded-full hover:bg-tertiary hover:text-primary" aria-label="Next">
                        <span aria-hidden="true"><i class="fa-solid fa-angle-left"></i></span>
                    </a>
                {% else %}
                    <span class="text-lg urbanist font-semibold flex items-center justify-center px-4 h-10 leading-tight text-gray-300 bg-white border border-gray-300 cursor-not-allowed rounded-full" aria-label="Next">
                        <span aria-hidden="true"><i class="fa-solid fa-angle-left"></i></span>
                    </span>
                {% endif %}
            {# Boucle pour afficher les numéros de page #}
            {% set halfWindowSize = 3 %}
            {% set startPage = (page - halfWindowSize) > 0 ? (page - halfWindowSize) : 1 %}
            {% set endPage = (page + halfWindowSize) < pages ? (page + halfWindowSize) : pages %}

            {% for i in startPage..endPage %}
                <li>
                    <a href="{{ path(route, {'page': i}) }}" {% if page == i %}aria-current="page" class="pagi text-lg urbanist font-semibold flex items-center justify-center px-4 h-10 text-white bg-purple-600 border border-gray-300 rounded-md "{% else %}class="text-lg urbanist font-semibold flex items-center justify-center w-10 px-4 h-10 rounded-full hover:bg-purple-500 hover:text-white"{% endif %}>
                        {{ i }}
                    </a>
                </li>
            {% endfor %}

            {# Lien suivant (désactivé si nous sommes sur la dernière page) #}
            <li>
                {% if page < pages %}
                    <a href="{{ path(route, {'page': page + 1}) }}" class="rounded-full hover:bg-purple-500 hover:text-white text-lg urbanist font-semibold flex items-center justify-center px-4 h-10  hover:bg-tertiary hover:text-primary" aria-label="Next">
                        <span aria-hidden="true"><i class="fa-solid fa-angle-right"></i></span>
                    </a>
                {% else %}
                    <span class="rounded-full hover:bg-purple-500 hover:text-white  text-lg urbanist font-semibold flex items-center justify-center px-4 h-10 leading-tight text-gray-30 cursor-not-allowed " aria-label="Next">
                        <span aria-hidden="true"><i class="fa-solid fa-angle-right"></i></span>
                    </span>
                {% endif %}
            </li>
            {# Lien dernière page (désactivé si nous sommes sur la dernière page) #}
            <li>
                 {% if page < pages %}
                    <a href="{{ path(route, {'page': pages}) }}" class=" hover:bg-purple-500 hover:text-white text-lg urbanist font-semibold flex items-center justify-center px-4 h-10 rounded-full hover:bg-tertiary hover:text-primary" aria-label="Next">
                        <span aria-hidden="true"><i class="fa-solid fa-angles-right"></i></span>
                    </a>
                {% else %}
                    <span class=" hover:bg-purple-500 hover:text-white flex items-center text-lg urbanist font-semibold justify-center px-4 h-10 leading-tight cursor-not-allowed rounded-full" aria-label="Next">
                        <span aria-hidden="true"><i class="fa-solid fa-angles-right"></i></span>
                    </span>
                {% endif %}
            </li>
        </ul>
    </nav>
</div>
