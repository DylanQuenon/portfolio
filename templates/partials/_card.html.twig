<div class="cardProjects w-11/12 flex flex-col h-[440px] rounded-2xl bg-primary-light dark:bg-primary-dark shadow-shadow-light dark:shadow-shadow-dark relative group overflow-hidden">
	<div class="cardImg w-full relative rounded-tl-2xl rounded-tr-2xl overflow-hidden h-full">
		<img src="/uploads/{{ project.cover }}" alt="Projet: {{ project.title }}" class="object-cover w-full h-full">
	</div>
	<!-- Info card -->
	<div class="info_card absolute bottom-0 -left-1 w-[102%] bg-quaternary-dark text-primary-dark dark:bg-quaternary-light dark:text-primary-light transform translate-y-full group-hover:translate-y-0 transition-transform duration-300 ease-in-out flex flex-col px-5 py-3 justify-between h-[220px] max-lg:translate-y-0 max-lg:relative max-lg:h-[220px]">
		<p class="flex justify-end w-full text-md nohemi">{{ project.date | date('d-m-Y') }}</p>
		<p class="text-xl uppercase hanken bold">{{ project.title }}</p>
		<p class="intro text-lg nohemi">
			{{ app.request.locale == 'fr' ? project.intro|slice(0, 100) ~ '...' : project.introEn|slice(0, 100) ~ '...' }}
		</p>
		<div class="flex w-full justify-end">
			{% include 'partials/button.html.twig' with {
                                            name: 'Voir plus',
                                            link: 'homepage',
                                            class: 'bg-primary-dark text-primary-light dark:text-primary-dark dark:bg-primary-light dark:border-[#f5f5f5] border-2 border-[#252525] hover:bg-tertiary-light hover:text-primary-dark hover:dark:text-primary-light hover:dark:bg-tertiary-dark hover:border-[#252525]',
                                            classIcon:"bg-primary-light text-primary-dark  dark:bg-primary-dark dark:text-primary-light",
                                        } %}
		</div>
	</div>
</div>
